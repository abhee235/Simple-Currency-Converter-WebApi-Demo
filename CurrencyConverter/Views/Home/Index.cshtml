@model CurrencyConverter.ViewModel.ConvertCurrencyViewModel

@{
    ViewBag.Title = "Index";
}

<div class="label">
<h3>Convert Currency</h3>
    </div>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


  
<form class="form-horizontal" method="post" action="/Home/Index">
    @Html.ValidationSummary(true)
  <div class="form-group">
    <label class="col-sm-4 control-label">
          @Html.LabelFor(l => l.CurrencyToConvert, "Enter currency amount")
    </label>
    <div class="col-sm-4">
        @Html.EditorFor(t => t.CurrencyToConvert, new { @class = " form-control" })
         @Html.ValidationMessageFor(model => model.CurrencyToConvert)
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">
         @Html.LabelFor(model => model.fromCurrency.Name, "From Currency")
    </label>
    <div class="col-sm-4">
       @Html.DropDownListFor(m => m.fromCurrency.Name,ViewBag.FromCurrencies as SelectList,"--select--", new { @class = " form-control" })
            @Html.ValidationMessageFor(model => model.fromCurrency.Name)
    </div>
  </div>
   <div class="form-group">
    <label class="col-sm-4 control-label">
         @Html.LabelFor(model => model.toCurrency.Name, "To Currency")
    </label>
    <div class="col-sm-4">
       @Html.DropDownListFor(m => m.toCurrency.Name, ViewBag.ToCurrencies as SelectList,"--select--", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.toCurrency.Name)
    </div>
       </div>
       <div class="form-group">
    <label class="col-sm-4 control-label">
           @Html.LabelFor(l => l.ConvertedCurrency, "Value")
    </label>
    <div class="col-sm-4">
        @Html.Editor("result",new { @class = " form-control" })
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-4">
      <button type="submit" class="btn btn-warning">Submit</button>
    </div>
  </div>
</form>




